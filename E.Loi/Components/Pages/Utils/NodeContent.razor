@inject ILogger<NodeContent> _logger
<div>
    <MapsNodeParent ParentsNode="parentsNode" />
</div>

<div class="card">
    <div class="card-header">
        <i class="fa-solid fa-file-lines"></i>
        محتوى العقدة
    </div>
    <div class="card-body">
        <RadzenHtmlEditor @bind-Value="content" style="height: 50vh;" />
    </div>
</div>

<div class="mt-2">
    <button class="btn custom-btn-background btn-sm " @onclick="@(()=>handlePrintNodeContent())">
        <i class="fa-solid fa-print"></i> طباعة محتوى العقدة
        @if (isDownload)
        {
            <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
            <span class="visually-hidden" role="status">Loading...</span>
        }
    </button>
</div>
