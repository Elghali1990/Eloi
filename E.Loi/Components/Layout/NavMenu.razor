@code {
    protected async Task LogOut()
    {
        await sessionStorageService.DestroySession();
        StateHasChanged();
    }
    protected override async Task OnAfterRenderAsync(bool firstRender) => await RedirectToPage();

    protected override async Task OnParametersSetAsync() => await RedirectToPage();


    async Task RedirectToPage()
    {
        var user = await sessionStorageService.RetriveUser();
        if (user is not null)
        {
            stateContainerService.user = user;
        }
    }
}